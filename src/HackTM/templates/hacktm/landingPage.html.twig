{% extends '@layout/dual-content.html.twig' %}

{% block content %}
    <style>
        #wrapper {
            background-size: cover;
            background-image: url("https://s3.eu-central-1.amazonaws.com/mariotest2/oradea.jpg");
        @import url('https://fonts.googleapis.com/css?family=Roboto+Condensed');
        }
        .sportButton {
            font-weight: 500;
            vertical-align: middle;
            display: block;
            padding: 15px;
            max-height: 50px; /* fara poze */
        }
        .sportButton:hover {
            background-color: #FCAB10;
            color: #333;
        }
        @media only screen and (min-width: 900px) {
            .desktop-push {
                height: 200px;
            }
        }
        .form-content{
            color: white !important;
            background-color: rgba(0,0,0,0.8) !important;
        }
        .form-content > * {
            color: white;
        }
        .pick-sport-heading {
            padding-left: 25px;
            font-family: 'Roboto Condensed', sans-serif;
            font-size: 20px;
        }
    </style>

    <div class="container">
        <br>
        <br>
        <div class="desktop-push"></div>
        <div class="form-content" style="border-radius: 15px;">
            <div class="row">
                <p class="pick-sport-heading">Pick your favorite sport</p>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <a href="/category/football" class="btn btn-primary sportButton" role="button">Football</a>
                </div>
                <div class="col-md-4">
                    <a href="/category/basketball" class="btn btn-primary sportButton" role="button">Basketball</a>
                </div>
                <div class="col-md-4">
                    <a href="/category/tennis" class="btn btn-primary sportButton" role="button">Tennis</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}